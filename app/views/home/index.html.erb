<% content_for :hero do %>
<div class="jumbotron jumbotron-fluid hero-main-user-background mb-0">
	<div class="container text-light">
		<div class="row mb-0">
			<div class="col-lg-12 pt-3 pb-3">
				<h1 class="display-2 text-left"><%= t('furniture.start_eating') %></h1>
			</div>
		</div>
		<div class="row mb-0">
			<div class="col-lg-12 pt-3 pb-3">
				<h3><%= t('furniture.enter_table_code')%></h3>
			</div>
		</div>
		<div class="row mb-0">
			<div class="col-lg-12 pt-3 pb-3">
				<%= form_tag home_register_table_path do %>
				<%= text_field_tag :code, nil, :class=>"p-3" %>
				<%= submit_tag t('furniture.enter_table_code_submit'), class: 'btn btn-warning btn-sm mb-1 p-3'%>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% end %>

<main role="main">
	<div class="row">
		<div class="col-lg-12 mt-0 mb-0 py-5 pb-3">
			<h2><%= t('furniture.where_to_eat')%></h2>
			<!-- <p><%= t('furniture.available_restaurants')%></p> -->
			<div class="row">
				<div class="col-lg-12 mt-0 mb-0 py-5 pb-3">
					<% @restaurants.select{|x|x.show_on_homepage && x.path.present?}.each do |restaurant| %>
						<div class="row">
							<div class="col-lg-3">
								<%= image_tag restaurant.image, class: "img-fluid" %>
							</div>
							<div class="col-lg-9">
								<h5><%= link_to restaurant.name, restaurant_path_path(restaurant.path), class: 'text-warning' %></h5>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</main>