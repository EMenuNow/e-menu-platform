    <main role="main">
      <div class="jumbotron jumbotron-fluid hero-main-user-background">
        <div class="container">
          <h2 class="display-2 text-center text-dark">Start Eating</h2>
          <p class=" text-center ">
          </p>
        </div>
      </div>
      <div class="container pb-3">
        <div class="row">

          <div class="col-md-5 shadow  bg-light rounded text-center">
            <h2>Enter your Table Code</h2>
            <!-- <p>create your table psasword</p> -->

            <%= form_tag home_register_table_path do %>
              <%= text_field_tag :code %>
              <%= submit_tag nil, class: 'btn btn-primary'%>
            <% end %>

            <!-- <p><a class="btn btn-secondary" href="#" role="button">View details &raquo;</a></p> -->
          </div>
          <div class="col-md-1">
            &nbsp;
          </div>


          <div class="col-md-6 shadow bg-light rounded">
            <h2>Where do you want to eat?</h2>
            <p>Available Restaurants</p>
            <ul>
            <% @restaurants.each do |restaurant| %>
              <li><%=restaurant.name%></li>
            <% end %>
            </ul>
            <!-- <p><a class="btn btn-secondary" href="#" role="button">View details &raquo;</a></p> -->
          </div>
        </div>
      
      </div>
    </main>

