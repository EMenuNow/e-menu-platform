<main role="main" class="container">
  <div class="my-3 p-3 bg-white rounded shadow-sm">
    <h6 class="border-bottom border-gray pb-2 mb-0">Dashboard</h6>
    <div class="media text-muted pt-3">
      <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark">Restaurant</strong>
          <% if @restaurant.present? %>
            <%= link_to("Manage Restaurant", restaurant_path(@restaurant.id))%>
          <% else %>
            <%= link_to("Add Restaurant", new_restaurant_path)%>
          <% end %>
        </div>
        <span class="d-block"><%= @restaurant.name if @restaurant%></span>
      </div>
    </div>
    <div class="media text-muted pt-3">
      <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark">Menus</strong>
          <a href="#">Manage Menus</a>
        </div>
        <span class="d-block">xxx</span>
        <span class="d-block">yyy</span>
      </div>
    </div>
    <div class="media text-muted pt-3">
      <img data-src="holder.js/32x32?theme=thumb&bg=007bff&fg=007bff&size=1" alt="" class="mr-2 rounded">
      <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
        <div class="d-flex justify-content-between align-items-center w-100">
          <strong class="text-gray-dark">Galleries</strong>
          <a href="#">Manage Galleries</a>
        </div>
        <span class="d-block">Pics Pics</span>
      </div>
    </div>
    
  </div>
</main>

