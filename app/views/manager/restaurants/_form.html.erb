<%= form_with(model: [:manager, restaurant], local: true) do |form| %>
<% if restaurant.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

  <ul>
    <% restaurant.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form.hidden_field :restaurant_user_id %>
<% 
table_service = restaurant.features.where(id: 9).present?
delivery = restaurant.features.where(id: 10).present?
table_takeaway = restaurant.features.where(id: 11).present?
collection = restaurant.features.where(id: 12).present?
%>


<!-- Tabs -->
<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Home</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="finance-tab" data-toggle="tab" href="#finance" role="tab" aria-controls="finance" aria-selected="false">Finance</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="settings-tab" data-toggle="tab" href="#settings" role="tab" aria-controls="settings" aria-selected="false">Settings</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="tracking-tab" data-toggle="tab" href="#tracking" role="tab" aria-controls="tracking" aria-selected="false">Tracking</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link" id="styling-tab" data-toggle="tab" href="#styling" role="tab" aria-controls="styling" aria-selected="false">Styling</a>
  </li>
</ul>
<!-- /Tabs -->

<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
    <!-- Home -->
    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= form.label :name %>
          <%= form.text_field :name, class: 'form-control  form-control-sm' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= form.label :image %>
          <%= form.file_field :image %>
        </div>
      </div>
      <div class="col">
        <div class="form-group ">
          <% if restaurant.image.attached? %>
          <%= image_tag restaurant.image.variant(resize: "200x200"), class: "img-fluid"  %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= form.label :address %>
          <%= form.text_field :address, class: 'form-control  form-control-sm' %>
        </div>
      </div>
      <div class="col">
        <div class="form-group ">
          <%= form.label :postcode %>
          <%= form.text_field :postcode, class: 'form-control  form-control-sm' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= form.label :telephone %>
          <%= form.text_field :telephone, class: 'form-control  form-control-sm' %>
        </div>
      </div>
      <div class="col">
        <div class="form-group ">
          <%= form.label :email %>
          <%= form.text_field :email, class: 'form-control  form-control-sm' %>
        </div>
      </div>
    </div>




    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= form.label :cuisine_id %>
          <%= form.select :cuisine_id,  options_for_select(@cuisines.map{|a| [a.name, a.id]}, restaurant.cuisine_id ), {prompt: "Choose cuisine"}, {class: 'form-control  form-control-sm'} %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= form.label :path %>
          <%= form.text_field :path, class: 'form-control  form-control-sm' %>
        </div>
      </div>
    </div>


    <!-- Home -->
  </div>
  <div class="tab-pane fade" id="finance" role="tabpanel" aria-labelledby="finance-tab">
    <!-- Finance -->

    <div class="row">
      <div class="col">
        <h3>Stripe</h3>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= form.label :currency_id %>
          <%= form.select :currency_id, options_for_select(Currency.all.map{|s| [s.name, s.id]}, restaurant.currency_id), {prompt: "Choose Currency"}, {class: 'form-control  form-control-sm'} %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= link_to("Connect stripe", @connect, class: "btn btn-warning#{' disabled' if @account[:details_submitted] && @account[:charges_enabled]}") %>
          <% if @account[:details_submitted] && @account[:charges_enabled] %>
            <strong class="d-block text-gray-dark">Stripe connection <span class="badge badge-pill badge-success">Complete</span></strong>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row d-none">
      <div class="col">
        <div class="form-group ">
          <%= form.label :stripe_api_key %>
          <%= form.text_field :stripe_api_key, class: 'form-control  form-control-sm', rows: 10  %>
        </div>
      </div>
    </div>

    <div class="row d-none">
      <div class="col">
        <div class="form-group ">
          <%= form.label :stripe_publish_api_key %>
          <%= form.text_field :stripe_publish_api_key, class: 'form-control  form-control-sm', rows: 10  %>
        </div>
      </div>
    </div>

    <div class="row d-none">
      <div class="col">
        <div class="form-group ">
          <%= form.label "Stripe Connected Account ID" %>
          <%= form.text_field :stripe_connected_account_id, class: 'form-control  form-control-sm', rows: 10  %>
        </div>
      </div>
    </div>

    <% if params[:admin] == "true" %>
      <div class="row">
        <div class="col">
          <div class="form-group ">
            <label>Commission percentage e.g. 1.5</label>
            <%= form.text_field :commision_percentage, class: 'form-control  form-control-sm', rows: 10  %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Finance -->
  </div>
  <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="settings-tab">
    <!-- Settings -->

    <div class="row">
      <div class="col-sm">
        <h5>Services</h5>
        <ul class="switches">
        
        <% @features[8..12].each do |feature|%>

          <li class="my-3">
            <%= check_box_tag dom_id(feature), feature.id, @restaurant.features.include?(feature), data: {
                              remote: true,
                              url: manager_restaurant_toggle_feature_path(@restaurant.id, feature.id),
                              method: :post
                              } %>
            <label for="feature_<%= feature.id %>">
              <span><%=feature.name%></span>
              <span></span>
            </label>
          </li>

        <% end %>

        </ul>

      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="form-group ">
          <label for="restaurant_show_on_homepage">Show on eat.emenunow.com homepage</label>

          <%= form.check_box :show_on_homepage, class: 'form-control  form-control-sm' %>
        </div>
      </div>
    </div>


    <!-- Settings -->
  </div>

  <div class="tab-pane fade" id="tracking" role="tabpanel" aria-labelledby="tracking-tab">
    <!-- tracking -->


    <div class="row mt-2">
      <div class="col">
        <div class="form-group ">
          <%= form.label :facebook_pixel %>
          <%= form.text_field :facebook_pixel, class: 'form-control  form-control-sm' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="form-group ">
          <%= form.label :facebook %>
          <%= form.text_field :facebook, class: 'form-control  form-control-sm' %>
        </div>
      </div>
      <div class="col">
        <div class="form-group ">
          <%= form.label :twitter %>
          <%= form.text_field :twitter, class: 'form-control  form-control-sm' %>
        </div>
      </div>
    </div>
    <!-- tracking -->
  </div>


  <div class="tab-pane fade" id="styling" role="tabpanel" aria-labelledby="styling-tab">
    <!-- Styling -->


    <div class="row mt-5 border-bottom border-gray">
      <div class="col">
        <div class="form-group ">
          <%= form.label :background_image %>
          <%= form.file_field :background_image %>
        </div>
      </div>
      <div class="col">
        <div class="form-group ">
          <% if restaurant.background_image.attached? %>
          <%= image_tag restaurant.background_image.variant(resize: "200x200"), class: "img-fluid"  %>
          <% end %>
        </div>
      </div>
    </div>


    <% 
subtle_background_list = [
{file: 'None', name: 'None'},
{file: 'wall4_@2X', name: 'Wall'},
{file: 'asfalt_@2X', name: 'Asfalt'},
{file: 'binding_light_@2X', name: 'Binding'},
{file: 'circles-light', name: 'Circles'},
{file: 'concrete-texture', name: 'Concrete'},
{file: 'dark_wall_@2X', name: 'Dark Wall'},
{file: 'debut_light_@2X', name: 'Debut Light'},
{file: 'furley_bg_@2X', name: 'Furley'},
{file: 'light-veneer', name: 'Light Veneer'},
{file: 'lightpaperfibers_@2X', name: 'Paper Fibres'},
{file: 'prism', name: 'Prism'},
{file: 'scribble_light_@2X', name: 'Scribble'},
]

%>



    <div class="row my-3 border-bottom border-gray">
      <div class="col">
        <div class="row">
          <div class="col">
            <div class="form-group ">
              <%= form.label :subtle_pattern_background %> <small class='text-gray text-warning'><i> WARNING: Choosing a subtle pattern background will override the uploaded image</i></small>
              <%= form.select :subtle_background,  options_for_select(subtle_background_list.map{|s| [s[:name], s[:file]]}, restaurant.subtle_background ), {prompt: "Choose Subtle Background"}, {class: 'form-control  form-control-sm'} %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <div class="form-group ">
              <div class="card-group">
                <%subtle_background_list.reject{|a| a[:name]=="None"}.each do |subtle| %>

                <div class="card" style="width: 12rem;">
                  <%= image_tag "/background/#{subtle[:file]}.png", class: "img-fluid" %>
                  <div class="card-body">
                    <p class="card-text"><small><%=subtle[:name]%></small></p>
                  </div>
                </div>



                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- /Styling -->
  </div>
</div>


















<div class="row">
  <div class="col">


    <div class="actions">
      <%= form.submit nil, class: "btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>