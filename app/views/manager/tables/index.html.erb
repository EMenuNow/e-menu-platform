<div class="container my-3 p-3 bg-white rounded shadow-sm">


<h1>Tables</h1>

<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Code</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.number %></td>
        <td><code><%= table.code %></code></td>
        <td><%= table.aasm_state %></td>
        <td><%= link_to 'Show', manager_restaurant_table_path(@restaurant, table) %></td>
        <td><%= link_to 'Edit', edit_manager_restaurant_table_path(@restaurant, table) %></td>
        <td><%= link_to 'Destroy', manager_restaurant_table_path(@restaurant, table), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<div class="d-block text-right mt-3">
<%= link_to 'New Table', new_manager_restaurant_table_path(@restaurant) %>
</div>

</div>