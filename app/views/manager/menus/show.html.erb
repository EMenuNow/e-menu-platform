



<main role="main" class="container">
  <div class="my-3 p-3 bg-white rounded shadow-sm">
    <h3 class="border-bottom border-gray pb-2 mb-0"><%=@menu.name%></h3>

<% if @menu.node_type != 'item' %>


 
<p>
  <strong>Name:</strong>
  <%= @menu.name %>
</p>

<% else %>


    <div class="row">
      <div class="col-sm-6">


        <div class="row">
          <div class="col-lg-3">
            <strong>Name:</strong>
          </div>
          <div class="col-lg-9">
            <%= @menu.name %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
              <strong>Description:</strong>
          </div>
          <div class="col-lg-9">
              <%= @menu.description %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
              <strong>Price:</strong>
          </div>
          <div class="col-lg-9">
             <%= @menu.prices_joined.map{|a| number_to_currency(a, unit: "Â£")}.join(" / ") if @menu.prices_joined%>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
              <strong>Available:</strong>
          </div>
          <div class="col-lg-9">
              <%= @menu.available %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
              <strong>Position:</strong>
          </div>
          <div class="col-lg-9">
              <%= @menu.position %>
          </div>
        </div>


      </div>
      <% if feature_match(:images, @menu.restaurant_features)%>
      <div class="col-sm-6">
        <% if @menu.image.attached? %>
        <div class="row">
          <div class="col-lg-3">
              <strong>Image:</strong>
          </div>
          <div class="col-lg-9">
              <%= image_tag @menu.image.variant(resize: "200x200") %>
          </div>
        </div>
      <% end %>
      </div>
      <% end %>

    </div>


    <div class="row border-top mt-3 pt-3">
      <div class="col-sm-6">


        <div class="row">
          <div class="col-lg-3">
              <strong>Ingredients:</strong>
          </div>
          <div class="col-lg-9">
              <% @menu.menu_item_categorisation.each do |category| %>
                <i class="<%= category.icon %>"> <%= category.name %></i>
              <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
              <strong>Spice:</strong>
          </div>
          <div class="col-lg-9">
              <%= @menu.spice_level_name %>
          </div>
        </div>


        <div class="row mt-3 pt-3 border-top">
          <div class="col">
            <h6>Available customer options</h6>
          </div>
        </div>
        
        <% @menu.custom_lists.keys.each do |key| %>
        <div class="row">
          <div class="col-lg-3">
              <strong><%=custom_list(key)%></strong>
          </div>


          <div class="col-lg-4">
            <%=custom_list_constraint(key)%>
          </div>
          <div class="col-lg-5">
               <%= custom_list_items(@menu.custom_lists[key]) %>
          </div>
        </div>
        <% end %>



      </div>


      <div class="col-sm-6">

<% if feature_match(:nutrition, @menu.restaurant_features)%>
        <div class="row">
          <div class="col-lg-3">
              <strong>Calories:</strong>
          </div>
          <div class="col-lg-9">
              <%= @menu.calories %>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-3">
              <strong>Nutrition:</strong>
          </div>
          <div class="col-lg-9">
              <%= @menu.nutrition.html_safe if @menu.nutrition %>
          </div>
        </div>
  <% end %>
        

<% if feature_match(:provenance, @menu.restaurant_features) %>
        <div class="row border-top mt-3 pt-3">
          <div class="col-lg-3">
              <strong>Provenance:</strong>
          </div>
          <div class="col-lg-9">
              <%= @menu.provenance.html_safe if @menu.provenance %>
          </div>
        </div>
  <% end %>
      

      </div>
    </div>








<% end %>
<%= link_to 'Edit', edit_manager_restaurant_menu_path(@restaurant, @menu, node_type: @menu.node_type, updated_menu: params[:updated_menu]) %> |
<%= link_to 'Back', manager_restaurant_menus_path(@restaurant, updated_menu: params[:updated_menu]) %>


  </div>
</main>
