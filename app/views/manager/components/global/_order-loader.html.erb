<% content_for :js do %>

  <%= javascript_include_tag "live_order_loader"%>

<% end %>
<div id="live-order-overlay"></div>
<div id="order-loader" class="card text-center">
  <h5 class="card-header">
    Live Orders
  </h5>
  <div class="card-body">
    <div class="progress mb-3">
      <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
    </div>
    <p id="loader-status" class="card-title">Loaded!</p>
    <a id="dismiss-loader" href="#" class="btn btn-warning">Close</a>
  </div>
</div>