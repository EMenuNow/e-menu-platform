<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Restaurant</th>
      <th>Basket total</th>
      <th>Items</th>
      <th>Email</th>
      <th>Stripe token</th>
      <th>Status</th>
      <th>Is ready</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.uuid %></td>
        <td><%= receipt.restaurant %></td>
        <td><%= receipt.basket_total %></td>
        <td><%= receipt.items %></td>
        <td><%= receipt.email %></td>
        <td><%= receipt.stripe_token %></td>
        <td><%= receipt.status %></td>
        <td><%= receipt.is_ready %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Receipt', new_receipt_path %>
