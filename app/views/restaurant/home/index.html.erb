<div class="container-fluid">
	<h2 class="mt-3"><%= t('restaurant.heading')%></h2>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Postcode</th>
				<th>Cuisine</th>
				<th>View Menu</th>
				<!-- <th>Book a Table</th> -->
			</tr>
		</thead>
		<tbody>

			<% @restaurants.each do |restaurant| %>

					<tr>
						<td><%= restaurant.name %></td>
						<td><%= restaurant.postcode %></td>
						<td><%= restaurant.cuisine_name %></td>
						<td><%= link_to t('restaurant.view_menu'), restaurant_menu_path(restaurant.slug), class: 'btn btn-warning' %></td>
						<!-- <td><%= link_to t('restaurant.book_table'), restaurant_booking_path(restaurant.slug), class: 'btn btn-warning' %></td> -->
					</tr>

			<% end %>

		</tbody>
	</table>
</div>