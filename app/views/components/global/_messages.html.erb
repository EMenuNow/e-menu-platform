<% content_for :js do %>
  <script type="text/javascript">
    $(function(){
      options = {}
      setTimeout(function() {
        $("#message").hide( "fade", options, 2000);
      }, 1500 );
    });
  </script>
<% end %>
<% if !notice.blank? %>
  <div class="alert alert-success alert-dismissible fade show m-0 mt-5" role="alert">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
<% if alert.present? %>
  <div class="alert alert-danger alert-dismissible fade show m-0 mt-5" role="alert">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

