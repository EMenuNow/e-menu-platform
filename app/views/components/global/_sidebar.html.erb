<nav id="sidebar" class="h-100">
  <div class="d-flex flex-column h-100">
    <div class="sidebar-header">
      <button class="navbar-toggler border-0" type="button" id="dismiss">
        <svg xmlns="http://www.w3.org/2000/svg" width="22.243" height="22.243" viewBox="0 0 22.243 22.243">
          <g id="Hamburger" transform="translate(2.121 2.121)">
            <line id="Line_1" data-name="Line 1" y1="18" x2="18" fill="none" stroke="var(--col-primary)" stroke-linecap="round" stroke-width="3" />
            <line id="Line_3" data-name="Line 3" x2="18" y2="18" fill="none" stroke="var(--col-primary)" stroke-linecap="round" stroke-width="3" />
          </g>
        </svg>
      </button>
    </div>

    <div class="scroll">
      <ul class="list-unstyled components">
        <% if @restaurant %>
          <li>
            <%= link_to @restaurant.name, restaurant_path(@restaurant.path) %>
          </li>
          <li>
            <%= link_to 'Menu Filters', restaurant_filter_path(@restaurant.path, menu_id: params[:menu_id], section_id: params[:section_id], dietary_ids: params[:dietary_ids], may_contain_allergen_ids: params[:may_contain_allergen_ids], contains_allergen_ids: params[:contains_allergen_ids]) %>
          </li>
        <% end %>
        <% if patron_signed_in? %>
          <li>
            <%= link_to "Your account",  settings_patrons_path %>
          </li>
          <li>
            <%= link_to "Edit settings", edit_patron_registration_path %>
          </li>
        <% end %>
        <% if !patron_signed_in? %>
          <li>
            <%= link_to "Sign in", new_patron_session_path %>
          </li>
          <li>
            <%= link_to "Register", new_patron_registration_path %>
          </li>
        <% end %>
        <% if !@restaurant and !current_page?(root_path) %>
          <li>
            <%= link_to "Choose Restaurant", root_path %>
          </li>
        <% end %>
        <% if patron_signed_in? %>
          <li>
            <%= link_to "Sign Out", destroy_patron_session_path, method: :delete %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="sidebar-footer mt-auto">
      <div class="d-flex justify-content-between">
        <div class="p-1 d-flex flex-column">
          <div class="p-1">Powered by</div>
          <div class="px-1 py-0"><%= image_tag("logo/Logo__icon_v2.0.0-dark-bkg.svg", height: '23', width: 'auto') %></div>
        </div>
        <%= link_to 'Privacy Policy', 'https://www.emenunow.com/privacy-policy', target: 'privacy', class: 'p-1 pr-2 mt-auto' %>
      </div>
    </div>
  </div>
</nav>