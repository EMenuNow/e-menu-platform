<%
  redirect_after_signup_to ||= request.original_fullpath
  password_field_enabled ||= false
%>

<!-- <h2>Log in</h2> -->
<div class="container-fluid d-none">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.hidden_field :redirect_after_signup_to, :value => resource.redirect_after_signup_to || redirect_after_signup_to %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if password_field_enabled %>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    <% end %>

    <% if false && devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>
<%#= render "patrons/shared/links" %>
