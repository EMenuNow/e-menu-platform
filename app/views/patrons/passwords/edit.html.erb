<%
  redirect_after_signup_to ||= params[:redirect_after_signup_to]
  redirect_after_signup_to ||= request.original_fullpath
%>
<% content_for :hero do %>
<div class="jumbotron jumbotron-fluid hero-main-user-background mb-0">
	<div class="container text-light text-center">
		<div class="row mb-0">
			<div class="col-lg-12 pt-3 pb-3">
				<h1 class="display-2">Change your password</h1>
			</div>
		</div>
	</div>
</div>
<% end %>

<div class="row">
  <div class="col-md-6 offset-md-3 text-center py-5">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :redirect_after_signup_to, :value => redirect_after_signup_to %>
      <%= f.hidden_field :reset_password_token %>
      <%= f.hidden_field :has_no_password, value: false %>
      <%= render "patrons/shared/error_messages", resource: resource %>

      <div class="field">
        <% placeholder = "New password" %>
        <% placeholder += " (#{@minimum_password_length} characters minimum)" if @minimum_password_length %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: placeholder, class: "w-100 mb-1 p-1" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "w-100 mb-1 p-1" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", :class=>"w-100 mb-1 p-1" %>
      </div>
    <% end %>

    <%= render "patrons/shared/links" %>
  </div>
</div>
